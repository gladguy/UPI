<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff9900" />
            <stroke
                android:width="1dp"
                android:color="#ff9900" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#ff1a1a"
                android:endColor="#990000"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ff9900" />
            <corners
                android:radius="1dp" />
           
        </shape>
    </item>
</selector>